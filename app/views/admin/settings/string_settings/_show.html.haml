- # app/views/admin/settings/string_settings/_show.html.haml

.setting{ :data => { :label => presenter.label } }
  .row
    %p.col-sm-4.text-right
      %strong= presenter.label
    .col-sm-20
      .row
        %p.col-sm-18
          - if setting.value.blank?
            %span.text-muted (none)
          - else
            = setting.value
        %p.col-sm-6{ :style => 'padding-left:5px' }
          = link_to '#', :class => 'btn btn-primary edit-setting-link', :style => 'width:100%' do
            = icon(icon_name :edit, :setting)
            Edit Setting

  .form-container.hidden
    = render :partial => "admin/settings/string_settings/form", :locals => { :setting => setting, :presenter => presenter }
