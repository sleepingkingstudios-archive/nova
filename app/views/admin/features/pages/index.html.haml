- # app/views/admin/features/pages/index.html.haml

- presenter = DirectoryPresenter.new @current_directory

= render :partial => 'admin/common/modals/confirm_delete'

- content_for :content_header do
  = render_component 'common/content_header', :title => presenter.label

%h3.clearfix.no-margin-bottom
  Pages

  = render_component 'admin/features/pages/index/actions', :directory => @current_directory, :presenter => presenter

= render :partial => 'admin/features/table', :locals => { :features => @current_directory ? @current_directory.pages : Page.roots }
