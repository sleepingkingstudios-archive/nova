- # app/views/admin/features/contents/text_contents/_fields.html.haml

= form.fields_for :content, content do |fields|
  = fields.form_group :content_type, :label => 'Content Type' do
    = fields.hidden_field :_type, :value => content._type
    = fields.static_field content._type
  = fields.form_group :text_content, :label => 'Content' do
    = fields.text_area :text_content
