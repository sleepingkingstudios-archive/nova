        = icon :arrow_right, :class => 'hidden-xs'
    - else
      = link_to blog_post_path(post.next_published) do
        Next
        %span.hidden-xs.hidden-sm Post
        = icon :arrow_right, :class => 'hidden-xs'
  .col-xs-6.col-lg-4.text-right
    - if post.last_published.blank? || post == post.last_published
      %span.text-muted
        Last
        %span.hidden-xs.hidden-sm Post
        = icon :mail_forward, :class => 'hidden-xs'
