- # app/views/features/blogs/_navigation.html.haml

%div.row
  .col-xs-6.col-lg-4.text-left
    - if post.first_published.blank? || post == post.first_published
      %span.text-muted
        = icon :mail_reply, :class => 'hidden-xs'
        First
        %span.hidden-xs.hidden-sm Post
    - else
      = link_to blog_post_path(post.first_published) do
        = icon :mail_reply, :class => 'hidden-xs'
        First
        %span.hidden-xs.hidden-sm Post
  .col-xs-6.col-lg-4.text-left
    - if post.prev_published.blank?
      %span.text-muted
        = icon :arrow_left, :class => 'hidden-xs'
        Previous
        %span.hidden-xs.hidden-sm Post
    - else
      = link_to blog_post_path(post.prev_published) do
        = icon :arrow_left, :class => 'hidden-xs'
